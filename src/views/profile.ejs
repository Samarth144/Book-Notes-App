<%- include('partials/header') %>

<%
    // Theme Logic Helper
    const cardTheme = user.preferences && user.preferences.card_theme ? user.preferences.card_theme : '';
    let themeColor = '#6366f1'; // Default Indigo
    let themeGradient = 'linear-gradient(135deg, #4f46e5 0%, #06b6d4 100%)'; // Default Gradient

    switch(cardTheme) {
        case 'purple':
            themeColor = '#8b5cf6';
            themeGradient = 'linear-gradient(135deg, #7c3aed 0%, #c026d3 100%)';
            break;
        case 'cyan':
            themeColor = '#06b6d4';
            themeGradient = 'linear-gradient(135deg, #0891b2 0%, #22d3ee 100%)';
            break;
        case 'orange':
            themeColor = '#f97316';
            themeGradient = 'linear-gradient(135deg, #ea580c 0%, #facc15 100%)';
            break;
        case 'red':
            themeColor = '#ef4444';
            themeGradient = 'linear-gradient(135deg, #dc2626 0%, #f87171 100%)';
            break;
        case 'gold':
            themeColor = '#eab308';
            themeGradient = 'linear-gradient(135deg, #ca8a04 0%, #fde047 100%)';
            break;
    }
%>

<div class="dashboard-container">
    <!-- Hero Banner -->
    <div class="profile-banner" style="background: <%= themeGradient %>;">
        <div class="banner-overlay"></div>
    </div>

    <div class="profile-content-grid">
        <!-- Left Column: User Identity -->
        <aside class="profile-sidebar">
            <!-- specific-user-card class added to override fixed height from global styles -->
            <div class="user-card <%= cardTheme %>" style="width: 100%; height: auto; min-height: 420px; position: sticky; top: 100px;">
                <div class="card-content" style="position: relative; inset: 0; margin: 4px; width: calc(100% - 8px); height: calc(100% - 8px); padding: 2.5rem 1rem;">
                    
                    <div class="avatar">
                        <%= user.username.charAt(0).toUpperCase() %>
                    </div>
                    
                    <h2 style="font-size: 1.8rem; margin-top: 1rem;"><%= user.username %></h2>
                    <p class="email-display" style="color: #94a3b8; margin-bottom: 2rem;"><%= user.email %></p>
                    
                <div class="user-stats-row" style="width: 100%;">
                        <div class="stat-item">
                            <span class="stat-label">Role</span>
                            <span class="stat-value">Member</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Joined</span>
                            <span class="stat-value"><%= user.created_at ? new Date(user.created_at).toLocaleDateString(undefined, { month: 'short', year: 'numeric' }) : 'N/A' %></span>
                        </div>
                    </div>

                </div>
            </div>
        </aside>

        <!-- Right Column: Settings & Configuration -->
        <main class="profile-main">
            <div class="settings-panel">
                <div class="panel-header">
                    <h2>Application Preferences</h2>
                    <p>Customize your reading experience and visual interface.</p>
                </div>

                <form action="/profile" method="POST" class="settings-form">
                    
                    <div class="setting-group">
                        <div class="setting-info">
                            <label for="defaultSort">Library Sorting</label>
                            <span class="setting-desc">Choose how your books are ordered by default.</span>
                        </div>
                        <div class="setting-control">
                            <div class="custom-select-wrapper">
                                <select id="defaultSort" name="defaultSort" class="dashboard-select">
                                    <option value="title_asc" <%= user.preferences && user.preferences.defaultSort === 'title_asc' ? 'selected' : '' %>>Title (A-Z)</option>
                                    <option value="title_desc" <%= user.preferences && user.preferences.defaultSort === 'title_desc' ? 'selected' : '' %>>Title (Z-A)</option>
                                    <option value="author_asc" <%= user.preferences && user.preferences.defaultSort === 'author_asc' ? 'selected' : '' %>>Author (A-Z)</option>
                                    <option value="author_desc" <%= user.preferences && user.preferences.defaultSort === 'author_desc' ? 'selected' : '' %>>Author (Z-A)</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <hr class="panel-divider">

                    <div class="setting-group">
                        <div class="setting-info">
                            <label for="card_theme">Visual Theme</label>
                            <span class="setting-desc">Select the accent color theme for your dashboard cards.</span>
                        </div>
                        <div class="setting-control">
                            <div class="custom-select-wrapper">
                                <select id="card_theme" name="card_theme" class="dashboard-select" onchange="handleThemeChange(this.value)">
                                    <option value="" <%= !user.preferences || !user.preferences.card_theme ? 'selected' : '' %>>Midnight Monochrome</option>
                                    <option value="purple" <%= user.preferences && user.preferences.card_theme === 'purple' ? 'selected' : '' %>>Nebula Dream (Purple)</option>
                                    <option value="cyan" <%= user.preferences && user.preferences.card_theme === 'cyan' ? 'selected' : '' %>>Neon Future (Cyan)</option>
                                    <option value="orange" <%= user.preferences && user.preferences.card_theme === 'orange' ? 'selected' : '' %>>Solar Flare (Orange)</option>
                                    <option value="red" <%= user.preferences && user.preferences.card_theme === 'red' ? 'selected' : '' %>>Crimson Tide (Red)</option>
                                    <option value="gold" <%= user.preferences && user.preferences.card_theme === 'gold' ? 'selected' : '' %>>Golden Era (Gold)</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </main>
    </div>
</div>

<script>
    const form = document.querySelector('.settings-form');
    
    document.getElementById('defaultSort').addEventListener('change', () => {
        savePreferences();
    });

    function handleThemeChange(theme) {
        updateThemePreview(theme);
        savePreferences();
    }

    async function savePreferences() {
        const formData = new FormData(form);
        const data = new URLSearchParams(formData);

        try {
            const response = await fetch('/profile', {
                method: 'POST',
                body: data,
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    // Add header to indicate AJAX request if needed by server, 
                    // though standard redirect handling might need adjustment in controller
                    // or we just ignore the redirect response here.
                }
            });
            
            if (response.ok) {
                // Optional: Show a small toast or indicator that saving worked
                // For now, silent save is fine as the UI updates instantly
                console.log('Preferences saved successfully');
            } else {
                console.error('Failed to save preferences');
            }
        } catch (error) {
            console.error('Error saving preferences:', error);
        }
    }

    function updateThemePreview(theme) {
        const banner = document.querySelector('.profile-banner');
        const userCard = document.querySelector('.user-card');
        
        // Map themes to gradients (must match server-side logic for consistency)
        let gradient = 'linear-gradient(135deg, #4f46e5 0%, #06b6d4 100%)'; // Default
        
        switch(theme) {
            case 'purple':
                gradient = 'linear-gradient(135deg, #7c3aed 0%, #c026d3 100%)';
                break;
            case 'cyan':
                gradient = 'linear-gradient(135deg, #0891b2 0%, #22d3ee 100%)';
                break;
            case 'orange':
                gradient = 'linear-gradient(135deg, #ea580c 0%, #facc15 100%)';
                break;
            case 'red':
                gradient = 'linear-gradient(135deg, #dc2626 0%, #f87171 100%)';
                break;
            case 'gold':
                gradient = 'linear-gradient(135deg, #ca8a04 0%, #fde047 100%)';
                break;
        }

        // Apply Gradient
        banner.style.background = gradient;

        // Apply Card Class
        // Remove existing theme classes
        userCard.classList.remove('purple', 'cyan', 'orange', 'red', 'gold');
        // Add new one if not default
        if (theme) {
            userCard.classList.add(theme);
        }
    }
</script>

