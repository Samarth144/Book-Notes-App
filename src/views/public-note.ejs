<%- include('partials/header') %>
        <div class="share-page-wrapper">
            <div class="share-hero">
                <div class="share-hero-bg" style="background-image: url('<%= note.cover_image_url || '/images/placeholder.jpg' %>')"></div>
                <div class="share-hero-overlay"></div>
                <div class="share-hero-content">
                    <img src="<%= note.cover_image_url || '/images/placeholder.jpg' %>" class="share-book-cover" alt="Cover of <%= note.book_title %>">
                    <div class="share-book-info">
                        <h1><%= note.book_title %></h1>
                        <p class="share-author">by <%= note.book_author %></p>
                    </div>
                </div>
            </div>

            <div class="share-main-card">
                <div class="share-meta-header">
                    <div class="share-user-avatar">
                        <%= note.username.charAt(0).toUpperCase() %>
                    </div>
                    <div class="share-user-info">
                        <div class="share-by-line">Shared by <span class="share-username">@<%= note.username %></span></div>
                        <div class="share-date"><%= new Date(note.created_at).toLocaleDateString(undefined, { year: 'numeric', month: 'long', day: 'numeric' }) %></div>
                    </div>
                </div>

                <% if (note.excerpt) { %>
                    <div class="share-excerpt-box">
                        <div class="quote-icon">â€œ</div>
                        <blockquote><%= note.excerpt %></blockquote>
                        <% if (note.chapter || note.page) { %>
                            <div class="excerpt-source">
                                <% if (note.chapter) { %><span><%= note.chapter %></span><% } %>
                                <% if (note.page) { %><span>Page <%= note.page %></span><% } %>
                            </div>
                        <% } %>
                    </div>
                <% } %>

                <div class="share-body rendered-html">
                    <%- note.rendered_html %>
                </div>
                
                <div class="share-cta">
                    <p>Join <strong>SCRIBL</strong> to save and share your own reading insights.</p>
                    <a href="/register" class="btn btn-apply">Get Started</a>
                </div>
            </div>
        </div>
<%- include('partials/footer') %>