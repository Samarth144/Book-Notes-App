        border-radius: 8px;
        padding: 10px;
    }
    .EasyMDEContainer .CodeMirror-scroll {
        background-color: #1a202c !important; /* Dark background for scroll area */
    }
    .EasyMDEContainer .CodeMirror-cursor {
        border-left: 1px solid #f1f5f9 !important; /* Explicitly set cursor color */
        background-color: #f1f5f9; /* Fallback for older browsers/modes */
        width: 1px; /* Ensure visibility */
    }
    .EasyMDEContainer .CodeMirror-linenumber {
        color: #a0aec0; /* Line number color */
    }
    .EasyMDEContainer .CodeMirror-selected {
        background-color: rgba(99, 102, 241, 0.3) !important; /* Selection color */
    }
    .editor-toolbar {
        background-color: #1a202c !important;
        border: 1px solid #2d3748;
        border-bottom: none;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }
    .editor-toolbar button {
        color: #f1f5f9 !important;
    }
    .editor-toolbar button.active, .editor-toolbar button:hover {
        background-color: #2d3748 !important;
    }
</style>

